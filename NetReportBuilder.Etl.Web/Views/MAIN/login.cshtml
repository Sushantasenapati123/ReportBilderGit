@{
    Layout = null; // This disables the layout for this view
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - ReportBuilder</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <style>
        body {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Arial', sans-serif;
            background-color: white; /* Set background to white */
        }

        .login-container {
            background-color: #f8f9fa; /* Light background for form */
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            margin-right: 50px; /* Space between logo and form */
        }

            .login-container h3 {
                margin-bottom: 2rem;
                text-align: center;
                font-weight: bold;
                color: #343a40;
            }

        .form-control {
            margin-bottom: 1.5rem;
            height: 45px;
            font-size: 1.1rem;
        }

        .btn-login {
            background-color: #6a11cb;
            color: white;
            font-size: 1.1rem;
            padding: 0.75rem;
            width: 100%;
            border: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

            .btn-login:hover {
                background-color: #4a08a7;
            }

        .invalid-feedback {
            display: none;
            color: red;
            margin-top: -1rem;
            margin-bottom: 1rem;
        }

        .footer {
            text-align: center;
            margin-top: 1.5rem;
            color: #888;
        }

        .logo-container {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            background-color: #f3e5ab; /* Example background color for the logo area */
            color: white;
            position: relative;
        }

        .logo {
            width: 100px;
            height: 100px;
            background: white;
            border-radius: 50%;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 2rem;
            color: #6a11cb;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
        }

        .main-container {
            display: flex;
            height: 100%;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="logo-container">
            <div class="logo">🔒</div> <!-- Simple lock icon as logo -->
        </div>
        <div class="login-container">
            <h3>Login to ReportBuilder</h3>
            <div class="form-group">
                <input type="text" class="form-control" id="username" value="Admin" placeholder="Username" />
                <div class="invalid-feedback" id="usernameError">Invalid Username</div>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="password" value="password" placeholder="Password" />
                <div class="invalid-feedback" id="passwordError">Invalid Password</div>
            </div>
            <button class="btn btn-login" onclick="login()">Login</button>
            <div class="footer">
                <p>© 2024 ReportBuilder | All rights reserved</p>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        function login() {
            const staticUsername = "Admin";
            const staticPassword = "password";

            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            // Validate username and password
            if (username !== staticUsername) {
                document.getElementById('usernameError').style.display = 'block';
            } else {
                document.getElementById('usernameError').style.display = 'none';
            }

            if (password !== staticPassword) {
                document.getElementById('passwordError').style.display = 'block';
            } else {
                document.getElementById('passwordError').style.display = 'none';
            }

            if (username === staticUsername && password === staticPassword) {
                // Redirect to main page after successful login
                window.location.href = "/MAIN/Main";
            }
        }
    </script>
</body>
</html>
